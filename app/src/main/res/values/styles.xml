<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->

        <!-- Base colors -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primaryDark</item>
        <item name="colorAccent">@color/accent</item>

        <!-- Buttons -->
        <item name="android:colorButtonNormal">@color/accent</item>
        <item name="android:colorControlHighlight">@color/white</item>

    </style>

    <style name="headerText">
        <item name="android:textSize">20sp</item>
        <item name="android:layout_marginBottom">16dp</item>
    </style>

    <style name="appButton">
        <item name="android:paddingTop">20dp</item>
        <item name="android:paddingBottom">20dp</item>
    </style>

    <style name="capstoneAppButton" parent="appButton">
        <item name="android:textColor">@color/white</item>
        <item name="android:backgroundTint">@color/capstone</item>
    </style>


</resources>
